<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/good_green</item>
        <item name="colorPrimaryDark">@color/good_green</item>
        <item name="colorAccent">@color/good_green</item>
    </style>

    <style name="AppTheme.NoActionBarLogin">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.customDesign.noActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="android:background">@color/white_opaque</item>
        <item name="android:windowBackground">@color/white_opaque</item>
        <item name="android:colorBackground">@color/white_opaque</item>
        <item name="android:buttonStyle">@drawable/custom_button_color</item>
    </style>

    <style name="AppTheme.custom.noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white_opaque</item>
        <item name="android:windowBackground">@color/white_opaque</item>
        <item name="android:colorBackground">@color/white_opaque</item>
        <item name="android:buttonStyle">@drawable/custom_button_color</item>
    </style>


    <style name="NavigationView" >
        <item name="fontFamily">@font/ebrima</item>
    </style>

    <style name="greenprogress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/good_green</item>
    </style>

