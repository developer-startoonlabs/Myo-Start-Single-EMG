<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.22"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_listmodel"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_s_no"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/good_green"
                android:textSize="16sp"
                android:text="12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tv_s_no"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/good_green"
                android:textSize="16sp"
                android:text="14 May" />

            <TextView
                android:id="@+id/tv_exercise_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#707070"
                android:textSize="14sp"
                android:text="11 Exercises" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/tv_download_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/good_green"

                        android:textSize="12sp"
                        android:text="11 Exercises" />
                </LinearLayout>

            </LinearLayout>



        <Button
            android:id="@+id/view_button"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:background="@drawable/round_cancel_buttons"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="View"
            >

        </Button>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
