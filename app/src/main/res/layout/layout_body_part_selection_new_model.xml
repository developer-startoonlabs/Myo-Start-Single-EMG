<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="210dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_main">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/bodypartImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:outlineProvider="background"
                android:layout_marginEnd="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/ankle_part"
                android:visibility="visible" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_left_right"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bp_model_left"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_body_part_left_section"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/left" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bp_model_right"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_body_part_right_section"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/right" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="14dp"
            android:visibility="gone"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:background="@drawable/drawable_iv_left_overlay"></RelativeLayout>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_right"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:background="@drawable/drawable_iv_right_overlay">
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout android:id="@+id/rl_mmt_and_session"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"
            android:layout_marginEnd="15dp"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:id="@+id/rl_left_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/bp_model_mmt_grade_left"
                    android:layout_marginEnd="8dp"
                    android:text="@string/mmt_grade"
                    android:layout_marginTop="22dp"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="@string/left"
                    android:background="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="4dp"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_right_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:id="@+id/bp_model_mmt_grade_right"
                    android:text="@string/mmt_grade"
                    android:layout_marginTop="22dp"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right"
                    android:paddingStart="8dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:background="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/rl_mmt_section"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/select_mmt_grading"
                    android:textSize="10sp"
                    android:textColor="@color/pitch_black"
                    />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_tv_0"
                    android:gravity="center"
                    android:layout_weight="0.2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/mmt_tv_0"
                        android:background="@drawable/drawable_mmt_circular_tv"
                        android:text="@string/zero"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_tv_1"
                    android:layout_weight="0.2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/mmt_tv_1"
                        android:background="@drawable/drawable_mmt_circular_tv"
                        android:text="@string/one"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_tv_2"
                    android:layout_weight="0.2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/mmt_tv_2"
                        android:background="@drawable/drawable_mmt_circular_tv"
                        android:text="@string/two"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_tv_3"
                    android:layout_weight="0.2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/mmt_tv_3"
                        android:background="@drawable/drawable_mmt_circular_tv"
                        android:text="@string/three"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_tv_4"
                    android:layout_weight="0.2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/mmt_tv_4"
                        android:background="@drawable/drawable_mmt_circular_tv"
                        android:text="@string/four"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_tv_5"
                    android:layout_weight="0.2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/mmt_tv_5"
                        android:background="@drawable/drawable_mmt_circular_tv"
                        android:text="@string/five"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:baselineAligned="false"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bp_model_mmt_confirm"
                    android:gravity="center"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pitch_black"
                        android:alpha="0.8"
                        android:text="@string/confirm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                        android:id="@+id/bp_model_mmt_cancel"
                    android:gravity="center"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pitch_black"
                        android:alpha="0.8"
                        android:text="@string/cancel"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_tv_section"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="128dp"
            android:layout_marginRight="17dp"
            android:visibility="visible"
            android:baselineAligned="false"
            android:background="@drawable/drawable_background_yellow"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/ll_tv_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/drawable_mmt_circular_tv"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_minus_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minus"
                        android:textColor="@color/pitch_black"

                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_selected_goal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/pitch_black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tv_plus"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:background="@drawable/drawable_mmt_circular_tv"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_plus_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"

                        android:textColor="@color/pitch_black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll_tv_section"
            android:layout_marginTop="124dp">
            <Spinner
                android:id="@+id/sp_set_goal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/spinner_background"
                android:elevation="3dp"
                android:gravity="center"
                android:visibility="gone"
                android:outlineProvider="background"
                android:scaleType="fitXY"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_main"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_body_part_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_body_part"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>