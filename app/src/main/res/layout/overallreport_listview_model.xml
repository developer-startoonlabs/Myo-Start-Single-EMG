<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.22"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_listmodel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/image_exercise_layout"
                android:layout_centerVertical="true"

                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/image_exercise"
                    android:layout_height="match_parent"
                    android:src="@drawable/elbow_part_new"></ImageView>
            </LinearLayout>



            <TextView
                android:id="@+id/tv_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_exercise_layout"
                android:layout_marginStart="10dp"
                android:textColor="@color/good_green"
                android:layout_marginTop="10dp"

                android:textSize="16sp"
                android:text="11 Exercises" />

            <TextView
                android:id="@+id/tv_exercise_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/image_exercise_layout"

                android:textColor="#707070"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:text="11 Exercises" />





        <Button
            android:id="@+id/view_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/round_cancel_buttons"
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="View"
            >

        </Button>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
