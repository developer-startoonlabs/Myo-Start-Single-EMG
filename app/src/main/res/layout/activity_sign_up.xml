        <Button
            android:id="@+id/btn_signup_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:width="120dp"
            android:background="@color/good_green"
            android:fontFamily="@font/ebrima"
            android:gravity="center"
            android:padding="10dp"
            android:text="Create"
            android:textColor="@color/white_opaque"
            android:textSize="18sp"
            android:theme="@style/AppTheme.customDesign.noActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

        <TextView
            android:id="@+id/tv_cancel_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ebrima"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="@string/signup_cancel"
            android:textColor="@color/good_green"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_signup_create"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/btn_signup_create"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup_create" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
