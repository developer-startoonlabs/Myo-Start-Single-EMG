<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="22dp" android:width="16dp">
        <shape>
            <solid android:color="#AAA" />
            <stroke android:width="0.5dp"/>
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <layer-list>
            <item android:height="5dp" android:width="7dp" android:top="-2.5dp" android:bottom="22dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#AAA"/>
                    <stroke android:width="0.5dp"/>
                </shape>
            </item>
            <item android:height="5dp" android:width="7dp" android:top="0dp" android:bottom="18.5dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#AAA"/>
                </shape>
            </item>
            <item android:width="16dp" android:height="22dp">
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="bottom">
                    <shape>
                        <solid android:color="@color/good_green" />
                        <corners android:radius="0dp" />
                        <stroke android:width="0.5dp"/>
                    </shape>
                </clip>
            </item>
            <item android:width="16dp" android:height="22dp">
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="fill">
                    <layer-list>

                        <item android:top="0dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="1dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>
                        <item android:top="15dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="1dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>
                        <item android:bottom="15dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="1dp"
                                    android:color="@color/white" />
                            </shape>
                        </item>

                    </layer-list>
                </clip>
            </item>
        </layer-list>
    </item>


</layer-list>